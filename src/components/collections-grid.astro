---
import Image from "~/components/image.astro";
import type { Asset, Collection, CollectionList } from "~/graphql/_generated";

type Props = {
  collections: Array<Collection>;
};

const { collections } = Astro.props;
---

<section>
  <div class="container mx-auto">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        collections.map((collection) => {
          return (
            <div class="overflow-hidden rounded-lg bg-white p-2 shadow-md">
              <a href={`/collections/${collection.slug}`}>
                <Image
                  image={collection.featuredAsset as Asset}
                  preset="small"
                  classes="cursor-pointer w-full h-48 object-cover object-center hover:scale-105 transition-transform duration-200"
                />
              </a>
              <div class="mt-4 text-center">
                <h2 class="text-lg font-semibold text-gray-700">
                  {collection.name}
                </h2>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
