---
import { Icon } from "astro-icon/components";
---

<template data-cart-target="lineItemTemplate">
  <li class="flex py-6">
    <div
      class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200"
    >
      <img
        id="lineItemImage"
        src=""
        class="h-full w-full object-cover object-center"
      />
    </div><div class="ml-4 flex flex-1 flex-col">
      <div>
        <div class="flex justify-between text-base font-medium text-gray-900">
          <h3>
            <a href="/" id="lineItemName"></a>
          </h3><p class="ml-4" id="lineItemPrice">$price</p>
        </div>
      </div><div class="flex flex-1 items-center text-sm">
        <form method="get" action="/">
          <label for="lineItemQuantity" class="mr-2">Quantity</label>
          <input
            class="h-6 rounded border border-gray-300"
            id="lineItemQuantity"
            type="number"
            min="1"
            max="99"
            data-action="change->cart#updateCartLine"
          />
        </form>
        <div class="flex-1"></div>
        <div class="flex">
          <button
            type="submit"
            name="removeItem"
            class="font-medium text-red-600 hover:text-red-500"
            data-action="click->cart#deleteLineItem"
            id="lineItemRemoveBtn"
          >
            <Icon name="trash" class="h-6 w-6" />
          </button>
        </div>
      </div>
    </div>
  </li>
</template>
